<!DOCTYPE html>
<html>
  <head>
    <title>Grade Management System</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class = 'container'>
      <div class = 'row'>        
          <% unless alert.blank? %>
            <%= alert %>
          <% end %>
          <% unless notice.blank? %>
            <%= notice %>
          <% end %>
          <%= yield %>
      </div>
  </body>
</html>
